{
  "name": "@grabnar/cli-ui",
  "version": "1.0.1",
  "description": "A utility library for creating CLI interfaces with a teeny bit of razmataz",
  "main": "src/index.js",
  "module": "src/index.js",
  "types": "src/index.d.ts",
  "type": "module",
  "private": false,
  "exports": {
    ".": {
      "import": "./src/index.js"
    }
  },
  "files": [
    "src/",
    "bin/",
    "examples/",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "cli",
    "ui",
    "terminal",
    "interface",
    "progress",
    "prompts",
    "animations",
    "retrofuturistic",
    "design-tokens",
    "style-dictionary"
  ],
  "author": "@brangor",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brangor/cli-ui.git"
  },
  "bugs": {
    "url": "https://github.com/brangor/cli-ui/issues"
  },
  "homepage": "https://github.com/brangor/cli-ui#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "boxen": "^7.1.1",
    "chalk": "^5.4.1",
    "gradient-string": "^2.0.2",
    "inquirer": "^9.2.15",
    "ora": "^8.0.1",
    "terminal-link": "^3.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.13",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "example": "node examples/basic-usage.js",
    "demo": "cli-ui-demo",
    "build": "echo 'No build step required for ES modules'",
    "prepublishOnly": "npm run test && npm run lint",
    "ci": "npm run lint && npm run test:coverage"
  }
}
